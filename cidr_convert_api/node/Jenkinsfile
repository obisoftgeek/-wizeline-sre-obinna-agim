def image

pipeline {

 environment {
    registry = "wizelinedevops/obinna-agim"
    registryCredential = 'dockerhub'
    dockerImage = ''
  }
    agent any
    stages {
	      stage('Verify') {
            steps {
                 
                bat '''ls -l "$WORKSPACE" '''
            }
        }
		 stage('Build') {
			   steps {
				 bat ''' npm install --cwd "$WORKSPACE/cidr_convert_api/node" --prefix "WORKSPACE/cidr_convert_api/node" '''
			   }
			}
			stage('Test') {
			  steps {
				  bat '''npm run test  --cwd "$WORKSPACE/cidr_convert_api/node" '''
			  }
			}
	     
        stage('BuildImage') {                 
            steps { 
                script {
                    image = docker.build("obinnadock/wizeline-obinna-agim", "$WORKSPACE/cidr_convert_api/node")
                }                
            }
        }   
       
        stage('Push') {                 
            steps { 
                script {
                    withDockerRegistry([credentialsId: "dockerhub", url: "https://registry.hub.docker.com" ]) {        
                        image.push("$BUILD_NUMBER")
                    }     
                }
            }
        }
    }
}
		  