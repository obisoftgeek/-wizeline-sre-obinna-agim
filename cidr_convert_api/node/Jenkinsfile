def image

pipeline {
    agent any
    stages {
	    
		 stage('Verify') {
            steps {
                sh 'node -v'
                   
                sh 'printenv'
                sh 'ls -l "$WORKSPACE"'
            }
        }
         
        stage('Run Test') {
            steps {
              dir("$WORKSPACE/cidr_convert_api/node") {
                sh 'npm run test'           
                
              }
            }
        } 
        stage('BuildImage') {                 
            steps {
                script {
                    image = docker.build("wizeline-sre", "--pull -f /Dockerfile")
                }                
            }
        }   
        stage('Smoke Test') {
            steps {
                script {
                    container = image.run()
                    container.stop()
              }
            }
        }
        stage('Push') {                 
            steps { 
                script {
                    withDockerRegistry([credentialsId: "docker-hub", url: "" ]) {        
                        image.push()
                    }     
                }
            }
        }
    }
}