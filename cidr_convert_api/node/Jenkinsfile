def image

pipeline {
    agent any
    stages {
	
	    stage('Verify') {
            steps { 
                sh 'ls -l "$WORKSPACE"'
            }
        }
	     
        stage('BuildImage') {                 
            steps {
                script {
                    image = docker.build("wizeline-sre", "$WORKSPACE/cidr_convert_api/node/Dockerfile")
                }                
            }
        }   
        stage('Smoke Test') {
            steps {
                script {
                    container = image.run()
                    container.stop()
              }
            }
        }
        stage('Push') {                 
            steps { 
                script {
                    withDockerRegistry([credentialsId: "docker-hub", url: "" ]) {        
                        image.push()
                    }     
                }
            }
        }
    }
}
		 